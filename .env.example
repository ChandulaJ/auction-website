# Environment variables for local development
# Copy this file to .env.local and update with your actual values

# JWT Secret Key (use a strong random string)
JWT_KEY=your_super_secret_jwt_key_here_change_this

# Database URLs (using local MySQL)
AUTH_MYSQL_URI=mysql://root:password@localhost:3306/auth
BID_MYSQL_URI=mysql://root:password@localhost:3306/bid
LISTINGS_MYSQL_URI=mysql://root:password@localhost:3306/listings
PAYMENTS_MYSQL_URI=mysql://root:password@localhost:3306/payments
PROFILE_MYSQL_URI=mysql://root:password@localhost:3306/profile

# NATS Streaming Server Configuration
NATS_URL=nats://localhost:4222
NATS_CLUSTER_ID=auction

# Service-specific NATS Client IDs
NATS_CLIENT_ID_AUTH=auth
NATS_CLIENT_ID_BID=bid
NATS_CLIENT_ID_LISTINGS=listings
NATS_CLIENT_ID_PAYMENTS=payments
NATS_CLIENT_ID_PROFILE=profile
NATS_CLIENT_ID_EMAIL=email
NATS_CLIENT_ID_EXPIRATION=expiration

# Redis Configuration (for expiration service)
REDIS_HOST=localhost
REDIS_PORT=6379

# AWS S3 Configuration (for image uploads in listings service)
# Create an S3 bucket and IAM user with S3 permissions
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1
AWS_S3_BUCKET_NAME=your_s3_bucket_name

# Stripe Configuration (for payments)
# Get from https://stripe.com
STRIPE_KEY=sk_test_your_stripe_secret_key_here

# Email Service Configuration
# Use your email provider settings
EMAIL=your_email@gmail.com
EMAIL_PASSWORD=your_app_specific_password

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:3001

# Service Ports (for reference)
# Frontend: 3000
# Auth: 3001
# Bid: 3002
# Listings: 3003
# Payments: 3004
# Profile: 3005
# Email: 3006
# Expiration: 3007
